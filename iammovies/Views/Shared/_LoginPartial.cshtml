@using Microsoft.AspNetCore.Identity
@using iammovies.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);

    var caminhoImagem = string.IsNullOrEmpty(user.FotoPerfil)
        ? Url.Content("~/img/semimagem.jpg")
        : Url.Content("~/" + user.FotoPerfil.TrimStart('/'));

    <div class="dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" id="perfilDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@caminhoImagem" alt="Foto de Perfil" class="rounded-circle me-2" width="36" height="36" style="object-fit: cover;" />
            <span>@user.Nome</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="perfilDropdown">
            @if (await UserManager.IsInRoleAsync(user, "admin"))
            {
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin</a></li>
                <li><hr class="dropdown-divider" /></li>
            }

            <li><a class="dropdown-item" asp-controller="Perfil" asp-action="Index">Perfil</a></li>
            <li><a class="dropdown-item" asp-controller="Favoritos" asp-action="Index">Favoritos</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="dropdown-item m-0 p-0">
                    <button type="submit" class="btn w-100 text-start">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registar</a>
        </li>
        <li class="nav-item ms-2">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
