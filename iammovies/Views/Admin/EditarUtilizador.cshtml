
@model iammovies.Models.ApplicationUser
@{
    ViewData["Title"] = "Editar Utilizador";
}

<h2>Editar Utilizador</h2>

<form asp-action="EditarUtilizador" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label>Nome</label>
        <input type="text" name="nome" class="form-control" value="@Model.Nome" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select name="role" class="form-control">
            @foreach (var role in (List<string>)ViewBag.Roles)
            {
                var selectedAttr = ViewBag.UserRole == role ? "selected" : "";
                @Html.Raw($"<option value=\"{role}\" {selectedAttr}>{role}</option>")
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Guardar Alterações</button>
</form>
